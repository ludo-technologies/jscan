{
  "complexity": {
    "lowThreshold": 10,
    "mediumThreshold": 20,
    "maxComplexity": 0,
    "enabled": true,
    "reportUnchanged": false
  },
  "deadCode": {
    "enabled": true,
    "minSeverity": "warning"
  },
  "output": {
    "format": "text",
    "showDetails": true,
    "colorize": true
  },
  "analysis": {
    "include_patterns": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx", "**/*.mjs", "**/*.cjs", "**/*.mts", "**/*.cts"],
    "exclude_patterns": ["node_modules", "dist", "build", ".next", ".nuxt", "coverage", "vendor", ".git", "*.min.js", "*.bundle.js"],
    "recursive": true,
    "follow_symlinks": false
  }
}
