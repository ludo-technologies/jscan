{
  "complexity": {
    "lowThreshold": 10,
    "mediumThreshold": 20,
    "maxComplexity": 0,
    "enabled": true,
    "reportUnchanged": false
  },
  "deadCode": {
    "enabled": true,
    "minSeverity": "warning"
  },
  "output": {
    "format": "text",
    "showDetails": true,
    "colorize": true
  },
  "analysis": {
    "include_patterns": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx", "**/*.mjs", "**/*.cjs", "**/*.mts", "**/*.cts"],
    "exclude_patterns": [
      "node_modules", "vendor",
      "dist", "build", "out", ".output",
      ".next", ".nuxt", ".vercel",
      ".cache", ".turbo", "coverage",
      ".git",
      "*.min.js", "*.min.mjs", "*.min.cjs", "*.bundle.js", "*.map"
    ],
    "recursive": true,
    "follow_symlinks": false
  }
}
